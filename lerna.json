{
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "yarn",
  "publishConfig": {
    "access": "@danbileee"
  },
  "ignoreChanges": ["**/*.md"],
  "command": {
    "version": {
      "allowBranch": "feature/monorepo",
      "conventionalCommits": true,
      "message": "chore(release): publish new version %v [skip ci]"
    },
    "publish": {
      "fromGit": true,
      "graphType": "all"
    }
  }
}
